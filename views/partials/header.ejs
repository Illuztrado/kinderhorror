          <% for(var i = 0; i < films.length; i++) {%>

            <li class="films">
            <!-- Output name from the iterated quote object -->
            <option value="<%= films[i].title %>"><%= films[i].title %></option>
            <!-- Output quote from the iterated quote object -->
            </li>
        <% } %>
